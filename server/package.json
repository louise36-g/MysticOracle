{
  "name": "celestiarcana-server",
  "version": "1.0.0",
  "type": "module",
  "description": "CelestiArcana Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "seed:year-energy": "tsx scripts/seedYearEnergy.ts",
    "fix:schemas": "tsx scripts/regenerate-schemas.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/backend": "^2.32.2",
    "@getbrevo/brevo": "^3.0.1",
    "@paypal/paypal-server-sdk": "^2.1.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@sentry/node": "^10.38.0",
    "@sentry/react": "^10.38.0",
    "astronomy-engine": "^2.1.19",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "openai": "^6.18.0",
    "stripe": "^20.1.2",
    "svix": "^1.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^27.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^7.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
